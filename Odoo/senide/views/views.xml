<odoo>
  <data>
    <!-- VISTA TREE USUARIO -->
    <record model="ir.ui.view" id="senide.usuario_list_view">
      <field name="name">senide.usuario.view.tree</field>
      <field name="model">senide.usuario</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" optional="show" />
          <field name="nombre" optional="show" />
          <field name="primer_apellido" optional="show" />
          <field name="segundo_apellido" optional="show" />
          <field name="nacimiento" optional="show" />
          <field name="direccion" optional="show" />
          <field name="pobalcion" optional="show" />
          <field name="cp" optional="show" />
          <field name="movil" optional="show" />
          <field name="dni_cuidador_ids" optional="show" />
          <field name="dni_asociado_ids" optional="show" />
        </tree>
      </field>
    </record>

    <!-- VISTA TREE CUIDADOR -->
    <record model="ir.ui.view" id="senide.cuidador_list_view">
      <field name="name">senide.cuidador.view.tree</field>
      <field name="model">senide.cuidador</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" optional="show" />
          <field name="nombre" optional="show" />
          <field name="primer_apellido" optional="show" />
          <field name="segundo_apellido" optional="show" />
          <field name="nacimiento" optional="show" />
          <field name="direccion" optional="show" />
          <field name="pobalcion" optional="show" />
          <field name="cp" optional="show" />
          <field name="movil" optional="show" />
          <field name="email" optional="show" />
          <field name="imagen" optional="show" />
          <field name="primario" optional="show" />
          <field name="dni_usuario_ids" optional="show" />
        </tree>
      </field>
    </record>

    <!-- VISTA TREE ASOCIADO -->
    <record model="ir.ui.view" id="senide.asociado_list_view">
      <field name="name">senide.asociado.view.tree</field>
      <field name="model">senide.asociado</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" optional="show" />
          <field name="nombre" optional="show" />
          <field name="primer_apellido" optional="show" />
          <field name="segundo_apellido" optional="show" />
          <field name="nacimiento" optional="show" />
          <field name="direccion" optional="show" />
          <field name="pobalcion" optional="show" />
          <field name="cp" optional="show" />
          <field name="movil" optional="show" />
          <field name="email" optional="show" />
          <field name="estadisticas" optional="show" />
          <field name="dni_usuario_ids" optional="show" />
        </tree>
      </field>
    </record>

    <!-- VISTA TREE LLAMADAS -->
    <record model="ir.ui.view" id="senide.llamadas_list_view">
      <field name="name">senide.llamadas.view.tree</field>
      <field name="model">senide.llamadas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="fecha_hora_inicio" optional="show" />
          <field name="fecha_horafin" optional="show" />
          <field name="respuesta" optional="show" />
          <field name="rel_id" optional="show" />
          <field name="transcripcion_id" optional="show" />       
        </tree>
      </field>
    </record>

    <!-- VISTA TREE transcripcion -->
    <record model="ir.ui.view" id="senide.transcripcion_list_view">
      <field name="name">senide.transcripcion.view.tree</field>
      <field name="model">senide.transcripcion</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" optional="show" />
          <field name="llamada_id" optional="show" />
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="senide.usuario_action_window">
      <field name="name">Usuario</field>
      <field name="res_model">senide.usuario</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="senide.cuidador_action_window">
      <field name="name">Cuidadores</field>
      <field name="res_model">senide.cuidador</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="senide.asociado_action_window">
      <field name="name">Asociado</field>
      <field name="res_model">senide.asociado</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="senide.llamadas_action_window">
      <field name="name">Llamadas</field>
      <field name="res_model">senide.llamadas</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="senide.transcripcion_action_window">
      <field name="name">Transcripción</field>
      <field name="res_model">senide.transcripcion</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Senide" id="senide.menu_root" />

    <!-- menu categories -->

    <menuitem name="Usuario" id="senide.usuario_menu" parent="senide.menu_root"
      action="senide.usuario_action_window" />
    <menuitem name="Cuidador" id="senide.cuidador_menu" parent="senide.menu_root"
      action="senide.cuidador_action_window" />
    <menuitem name="Asociado" id="senide.asociado_menu" parent="senide.menu_root"
      action="senide.asociado_action_window" />
    <menuitem name="Llamadas" id="senide.llamadas_menu" parent="senide.menu_root"
      action="senide.llamadas_action_window" />
    <menuitem name="Trasncripción" id="senide.transcripcion_menu" parent="senide.menu_root"
      action="senide.transcripcion_action_window" />
  </data>
</odoo>